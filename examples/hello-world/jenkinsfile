pipeline {
    agent {
        label 'AGENT-1'
    }

    environment {
        APP_DIR = "examples/hello-world"
        IMAGE_NAME = "hello-world-app"
        DOCKERHUB_USER = "prasadyadav99"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/prasadbeedam/express.git'
                sh "git checkout main"
            }
        }

        stage('List Files in hello-world') {
            steps {
                dir("${APP_DIR}") {
                    sh "ls -ltr"
                }
            }
        }

        stage('Read the Version') {
            steps {
                dir("${APP_DIR}") {
                    script {
                        def packageJson = readJSON file: 'package.json'
                        def appVersion = packageJson.version
                        echo "üì¶ Application version: ${appVersion}"

                        currentBuild.displayName = "v${appVersion}"
                        env.IMAGE_TAG = "${IMAGE_NAME}:${appVersion}"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${APP_DIR}") {
                    echo "Building image: ${env.IMAGE_TAG}"
                    sh "docker build -t ${env.IMAGE_TAG} ."
                }
            }
        }

        stage('Run Container for Testing') {
            steps {
                echo "üöÄ Running container from image: ${env.IMAGE_TAG}"
                sh "docker run -d --name test_container -p 8080:8080 ${env.IMAGE_TAG}"
            }
        }

        stage('Health Check Test') {
            steps {
                echo 'üîç Running health check...'
                sh '''
                    sleep 5
                    curl -f http://localhost:8080 || exit 1
                '''
            }
        }

        stage('Test') {
            steps {
                echo '‚úÖ Testing...'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    def imageName = env.IMAGE_TAG.split(':')[0]
                    def version = env.IMAGE_TAG.split(':')[1]
                    def fullImageName = "${DOCKERHUB_USER}/${imageName}:${version}"
                    echo "üì§ Pushing image: ${fullImageName}"

                    sh "docker tag ${env.IMAGE_TAG} ${fullImageName}"

                    withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh """
                            echo "$PASSWORD" | docker login -u "$USERNAME" --password-stdin
                            docker push ${fullImageName}
                            docker logout
                        """
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                echo "üöÄ Deploying image: ${env.IMAGE_TAG}"
            }
        }
    }

    post {
        always {
            echo "üßπ Cleaning up..."
            sh '''
                docker stop test_container || true
                docker rm test_container || true
            '''
        }

        success {
            echo "üßº Cleaning up workspace..."
            sh '''
                find . -mindepth 1 -maxdepth 1 -exec rm -rf {} +
            '''
        }
    }
}
