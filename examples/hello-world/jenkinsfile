pipeline {
    agent {
        label 'AGENT-1'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/prasadbeedam/express.git'
                sh "ls -ltr"
            }
        }

        stage('List Files in hello-world') {
            steps {
                dir('examples/hello-world') {
                    sh "git checkout main"
                    sh "ls -ltr"
                }
            }
        }

        stage('Build') {
            steps {
                echo 'Building...'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}
