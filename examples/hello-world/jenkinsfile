pipeline {
    agent any

    environment {
        IMAGE_NAME = "hello-world-app"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/prasadbeedam/express.git'
            }
        }

        stage('Build') {
            steps {
                dir('examples/hello-world') {
                    sh 'npm install'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'No tests specified. Skipping for now.'
            }
        }

        stage('Docker Build') {
            steps {
                dir('examples/hello-world') {
                    sh "docker build -t ${IMAGE_NAME}:latest ."
                }
            }
        }

        stage('Run Container') {
            steps {
                sh "docker run -d -p 8080:8080 ${IMAGE_NAME}:latest"
            }
        }
    }

    post {
        success {
            echo 'Deployment completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
