pipeline {
    agent any

    environment {
        APP_DIR = "examples/hello-world"
        IMAGE_NAME = "hello-world-app"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/prasadbeedam/express.git'
            }
        }

        stage('Read Version') {
            steps {
                script {
                    def pkgJson = readFile("./package.json")
                    def version = new groovy.json.JsonSlurper().parseText(pkgJson).version
                    env.VERSION = version
                    env.IMAGE_TAG = "${IMAGE_NAME}:${VERSION}"
                    echo "üì¶ Detected version: ${VERSION}"
                    echo "üì∏ Docker Image Tag: ${IMAGE_TAG}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${APP_DIR}") {
                    sh "docker build -t $IMAGE_TAG ."
                }
            }
        }

        stage('Run Container') {
            steps {
                sh "docker rm -f hello-app || true"
                sh "docker run -d -p 8080:8080 --name hello-app $IMAGE_TAG"
            }
        }

        stage('Test Endpoint') {
            steps {
                sh "sleep 3 && curl --fail http://localhost:8080"
            }
        }
    }

    post {
        success {
            echo "‚úÖ Successfully built and tagged image: $IMAGE_TAG"
        }
        failure {
            echo "‚ùå Pipeline failed. Check logs above."
        }
    }
}