pipeline {
    agent {
        label 'AGENT-1'
    }

    environment {
        APP_DIR = "examples/hello-world"
        IMAGE_NAME = "hello-world-app"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/prasadbeedam/express.git'
                sh "git checkout main"
            }
        }

        stage('List Files in hello-world') {
            steps {
                dir("${APP_DIR}") {
                    sh "ls -ltr"
                }
            }
        }

        stage('Read the Version') {
            steps {
                dir("${APP_DIR}") {
                    script {
                        def packageJson = readJSON file: 'package.json'
                        def appVersion = packageJson.version
                        echo "ðŸ“¦ Application version: ${appVersion}"

                        currentBuild.displayName = "v${appVersion}"
                        env.IMAGE_TAG = "${IMAGE_NAME}:${appVersion}"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${APP_DIR}") {
                    echo "Building image: ${env.IMAGE_TAG}"
                    sh "docker build -t ${env.IMAGE_TAG} ."
                }
            }
        }

        stage('Test') {
            steps {
                echo 'âœ… Testing...'
            }
        }

        stage('Deploy') {
            steps {
                echo "ðŸš€ Deploying image: ${env.IMAGE_TAG}"
            }
        }
    }

    post {
        success {
            echo "ðŸ§¹ Cleaning up workspace..."
            // Remove the application directory
            sh "rm -rf ${APP_DIR}"
        }
    }
}
