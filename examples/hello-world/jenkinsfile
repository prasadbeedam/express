pipeline {
    agent {
        label 'AGENT-1'
    }

    environment {
        APP_DIR = "examples/hello-world"
        IMAGE_NAME = "hello-world-app"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/prasadbeedam/express.git'
                sh  "ls -ltr"
            }
        }
        stage('read the version'){
            steps{
                script{
                    def packageJson = readJSON file: 'package.json'
                    appVersion = packageJson.version
                    echo "application version: $appVersion"
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                dir("${APP_DIR}") {
                    sh "docker build -t $IMAGE_TAG ."
                }
            }
        }

        stage('Run Container') {
            steps {
                sh "docker rm -f hello-app || true"
                sh "docker run -d -p 8080:8080 --name hello-app $IMAGE_TAG"
            }
        }

        stage('Test Endpoint') {
            steps {
                sh "sleep 3 && curl --fail http://localhost:8080"
            }
        }
    }

    post {
        success {
            echo "✅ Successfully built and tagged image: $IMAGE_TAG"
        }
        failure {
            echo "❌ Pipeline failed. Check logs above."
        }
    }
}