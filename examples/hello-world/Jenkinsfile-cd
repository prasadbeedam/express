pipeline {
    agent any

    environment {
        APP_DIR = "examples/hello-world"
        IMAGE_NAME = "prasadyadav99/hello-world-app"
        NAMESPACE = "hello-world"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/prasadbeedam/express.git'
                sh "git checkout main"
            }
        }

        stage('Read Version from package.json') {
            steps {
                dir("${APP_DIR}") {
                    script {
                        def pkg = readJSON file: 'package.json'
                        env.APP_VERSION = pkg.version
                        echo "ðŸ“¦ Application version: ${env.APP_VERSION}"
                    }
                }
            }
        }

        stage('Update deployment.yaml with Image') {
            steps {
                dir("${APP_DIR}") {
                    script {
                        def imageTag = "${IMAGE_NAME}:${env.APP_VERSION}"
                        echo "ðŸ›  Updating deployment.yaml with image: ${imageTag}"

                        sh """
                        sed -i 's|image: .*|image: ${imageTag}|' deployment.yaml
                        cat deployment.yaml
                        """
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                dir("${APP_DIR}") {
                    script {
                        echo "ðŸš€ Deploying to namespace ${env.NAMESPACE}"
                        sh """
                            export KUBECONFIG=/home/ec2-user/.kube/config
                            kubectl version --client
                            kubectl apply -n ${env.NAMESPACE} -f deployment.yaml
                        """
                    }
                }
            }
        }
    }
}
